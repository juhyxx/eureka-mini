<html>
	<head>
		<title>Heureka</title>
		<link rel="stylesheet" href="style.css">
	</head>

	<body id="index">
	<ul>
		 {{#each categories}}
		 	<li><a href="/category/{{categoryId}}">{{title}}</a></li>
		 {{/each}}
	</ul>
	<section>
		<ul>
		{{#each categories}}
			<li>
				<a href="/category/{{categoryId}}">
					<img src="app/assets/{{categoryId}}.jpg">
					<div>{{title}}</div>
				</a>
			</li>
		 {{/each}}
		</ul>
		 <footer>Paging</footer>
	</section>
	</body>

	<script>
		var connection = new WebSocket('ws://localhost:8080', 'echo-protocol');
		connection.onmessage = function (e) {
				console.log('Reloading...');
				window.location.reload();
			};
		</script>
</html>