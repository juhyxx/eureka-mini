<!DOCTYPE html>
<html>

<head>
	<title>{{selected.title}} (Eureka)</title>
	<link rel="stylesheet" href="/style.css">
</head>

<body>
	{{> header }}
	<main id="category">
		<div class="list-category">
			{{#each categories}} {{#if (eq categoryId ../selected.categoryId)}}
			<a href="/category/{{categoryId}}" class=selected>{{title}}</a>
			{{else}}
			<a href="/category/{{categoryId}}">{{title}}</a>
			{{/if}} {{/each}}
		</div>
		<section>
			<ul class="list-items-down">
				{{#each products}}
				<li>
					<div class="image" style="background-image:url({{image}})"></div>

					<div>
						<h2>{{title}}</h2>
						<div>{{description}}</div>
					</div>

					<div>
						<div class="price">{{currency rangeMin}} - {{currency rangeMax}} Kƒç</div>
						<a class="button" href="/category/{{categoryId}}/detail/{{productId}}">Porovnat ceny</a>
					</div>

				</li>
				{{/each}}
			</ul>
			<div class="paging">
				{{#each paging.pages as |page|}}
					{{#if (eq ../paging.selected @index)}}
						<div class="selected">{{page}}</div>
					{{else}}
						<a href="?page={{@index}}">{{page}}</a>
					{{/if}}
				{{/each}}
			</div>
		</section>

	</main>
	{{> footer }} {{> reload }}
</body>